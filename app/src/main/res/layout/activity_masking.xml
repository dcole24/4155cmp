<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel.a4155cmp.MaskingActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="283dp"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />


    <CheckBox
        android:id="@+id/CheckBox_Masking"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="3dp"
        android:saveEnabled="true"
        android:text="Materials you'll need to start will be masking tape and newspaper for masking off."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:text="Materials you'll need to start will be masking tape and newspaper for masking off." />

    <CheckBox
        android:id="@+id/CheckBox_Masking2"
        android:layout_width="0dp"
        android:layout_height="83dp"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="3dp"
        android:saveEnabled="true"
        android:text="Before you begin priming, mask up areas you don't want to paint using masking tape and newspaper."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CheckBox_Masking"
        tools:text="Before you begin priming, mask up areas you don't want to paint using masking tape and newspaper." />

    <CheckBox
        android:id="@+id/CheckBox_Masking3"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="3dp"
        android:saveEnabled="true"
        android:text="Take your time with masking areas off to avoid unsightly overspray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CheckBox_Masking2"
        tools:text="Take your time with masking areas off to avoid unsightly overspray" />

    <CheckBox
        android:id="@+id/CheckBox_Masking4"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="3dp"
        android:saveEnabled="true"
        android:text="Remove the masking while the clear coat is still wet being careful not to get any tape or paper stuck on the wet paint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CheckBox_Masking3"
        tools:text="Remove the masking while the clear coat is still wet being careful not to get any tape or paper stuck on the wet paint" />

    <Button
        android:id="@+id/playVideo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Video"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="530dp"
        app:layout_constraintTop_toBottomOf="@+id/CheckBox_Masking4"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>


</android.support.constraint.ConstraintLayout>
